---
/**
 * GitHubStars Component
 * Displays a GitHub repo link with a live star count fetched client-side.
 */

interface Props {
  repo: string;
}

const { repo } = Astro.props;
const repoUrl = `https://github.com/${repo}`;
---

<a href={repoUrl} class="github-stars" target="_blank" rel="noopener noreferrer" data-repo={repo}>
  <svg class="github-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
    <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z"/>
  </svg>
  <span class="github-repo-name">{repo}</span>
  <svg class="star-icon" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
  </svg>
  <span class="star-count"></span>
</a>

<script>
  document.querySelectorAll<HTMLAnchorElement>(".github-stars").forEach((el) => {
    const repo = el.dataset.repo;
    if (!repo) return;
    const countEl = el.querySelector(".star-count");
    if (!countEl) return;

    fetch(`https://api.github.com/repos/${repo}`)
      .then((res) => res.json())
      .then((data) => {
        if (data.stargazers_count != null) {
          countEl.textContent = data.stargazers_count.toLocaleString();
          countEl.classList.add("loaded");
        }
      })
      .catch(() => {
        // Silently fail â€” the link still works without the count
      });
  });
</script>

<style>
  .github-stars {
    display: inline-flex;
    align-items: baseline;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .github-stars:hover {
    color: var(--color-accent);
  }

  .github-icon {
    flex-shrink: 0;
    position: relative;
    top: 0.2em;
  }

  .github-repo-name {
    font-weight: 500;
  }

  .star-icon {
    flex-shrink: 0;
    position: relative;
    top: 0.2em;
    margin-left: var(--space-1);
  }

  .star-count {
    font-weight: 600;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .star-count.loaded {
    opacity: 1;
  }
</style>
