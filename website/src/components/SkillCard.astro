---
/**
 * SkillCard Component
 * Editorial-style skill card for the plugin detail page grid
 */

interface Props {
  name: string;
  displayName: string;
  pluginName: string;
  tagline: string;
  index: number;
}

const { name, displayName, pluginName, tagline, index } = Astro.props;
---

<a href={`/claude/${pluginName}/skills/${name}`} class="skill-card" style={`--delay: ${index * 80}ms`}>
  <article class="skill-card-inner">
    <div class="skill-number">
      <span>{String(index + 1).padStart(2, '0')}</span>
    </div>

    <div class="skill-content">
      <h3 class="skill-name">{displayName}</h3>
      <p class="skill-tagline">{tagline}</p>
    </div>

    <div class="skill-footer">
      <span class="skill-link">
        Explore skill
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7" />
        </svg>
      </span>
    </div>
  </article>
</a>

<style>
  .skill-card {
    display: block;
    color: inherit;
    text-decoration: none;
    animation: fadeInUp 0.5s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .skill-card-inner {
    background: var(--color-surface);
    padding: var(--space-6);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .skill-card:hover .skill-card-inner {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  /* Decorative accent line */
  .skill-card-inner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent), var(--color-secondary));
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .skill-card:hover .skill-card-inner::before {
    opacity: 1;
  }

  .skill-number {
    margin-bottom: var(--space-4);
  }

  .skill-number span {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    font-weight: 400;
    color: var(--color-earth-300);
    line-height: 1;
    transition: color var(--transition-base);
  }

  .skill-card:hover .skill-number span {
    color: var(--color-accent);
  }

  .skill-content {
    flex: 1;
  }

  .skill-name {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
    line-height: var(--leading-snug);
  }

  .skill-tagline {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-accent);
    margin-bottom: 0;
    line-height: var(--leading-normal);
  }

  .skill-footer {
    margin-top: auto;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border-subtle);
  }

  .skill-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .skill-card:hover .skill-link {
    color: var(--color-accent);
  }

  .skill-link svg {
    transition: transform var(--transition-fast);
  }

  .skill-card:hover .skill-link svg {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .skill-card-inner {
      padding: var(--space-5);
    }

    .skill-number span {
      font-size: var(--text-2xl);
    }

    .skill-name {
      font-size: var(--text-lg);
    }
  }
</style>
