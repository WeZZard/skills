---
import Base from "../layouts/Base.astro";
import { readdirSync, readFileSync, existsSync } from "fs";
import { join } from "path";

interface SkillData {
  sourceHash: string;
  generatedAt: string;
  skill: {
    name: string;
    tagline: string;
    summary: string;
    workflow: {
      mermaid: string;
      steps: Array<{ name: string; description: string }>;
    };
    principles: string[];
  };
}

const generatedDir = join(process.cwd(), "src/content/generated");
let skills: SkillData[] = [];

if (existsSync(generatedDir)) {
  const files = readdirSync(generatedDir).filter((f) => f.endsWith(".json"));
  skills = files.map((f) => {
    const content = readFileSync(join(generatedDir, f), "utf-8");
    return JSON.parse(content) as SkillData;
  });
}
---

<Base title="Skills">
  <div class="hero-section">
    <div class="hero-bg"></div>
    <div class="container">
      <header class="hero">
        <p class="hero-eyebrow">Claude Code Skills</p>
        <h1>Build better with<br /><span class="gradient-text">structured workflows</span></h1>
        <p class="hero-description">
          A collection of skills for AI-assisted development. Plan, execute, and iterate with confidence.
        </p>
      </header>
    </div>
  </div>

  <div class="container">
    {
      skills.length === 0 ? (
        <div class="empty-state">
          <p>
            No skills generated yet. Run <code>npm run generate</code> to create skill content.
          </p>
        </div>
      ) : (
        <section class="skills-section">
          <div class="section-header">
            <h2>Available Skills</h2>
            <p>Click any skill to learn more about how it works</p>
          </div>
          <div class="skills-grid">
            {skills.map((s, index) => (
              <a href={`/skills/${s.skill.name}`} class="skill-card" style={`--delay: ${index * 50}ms`}>
                <div class="skill-card-inner">
                  <div class="skill-badge">{index + 1}</div>
                  <h3>{s.skill.name}</h3>
                  <p class="skill-tagline">{s.skill.tagline}</p>
                  <p class="skill-summary">{s.skill.summary}</p>
                  <span class="skill-link">
                    Learn more
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7" />
                    </svg>
                  </span>
                </div>
              </a>
            ))}
          </div>
        </section>
      )
    }

    <section class="install-section">
      <div class="install-card">
        <div class="install-content">
          <h2>Get started</h2>
          <p>Add the marketplace to Claude Code and install the skills plugin.</p>
        </div>
        <div class="install-commands">
          <div class="command-row">
            <span class="command-label">Add marketplace</span>
            <code>/plugin marketplace add WeZZard/skills</code>
          </div>
          <div class="command-row">
            <span class="command-label">Install plugin</span>
            <code>/plugin install wezzard@wezzard-skills</code>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <p>Made with Claude Code</p>
    </footer>
  </div>
</Base>

<style>
  .hero-section {
    position: relative;
    padding: 6rem 0 4rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(16, 163, 127, 0.08), transparent),
      radial-gradient(ellipse 60% 40% at 80% 60%, rgba(16, 163, 127, 0.04), transparent),
      radial-gradient(ellipse 40% 30% at 20% 80%, rgba(99, 102, 241, 0.03), transparent);
    pointer-events: none;
  }

  .hero {
    position: relative;
    text-align: center;
    max-width: 720px;
    margin: 0 auto;
  }

  .hero-eyebrow {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent);
    margin-bottom: 1.5rem;
    letter-spacing: 0.02em;
  }

  .hero h1 {
    margin-bottom: 1.5rem;
  }

  .gradient-text {
    background: linear-gradient(135deg, #10a37f 0%, #059669 50%, #0d9488 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    max-width: 480px;
    margin: 0 auto;
  }

  .empty-state {
    background: var(--color-surface);
    padding: 4rem;
    border-radius: 16px;
    text-align: center;
    border: 1px solid var(--color-border);
  }

  .empty-state p {
    color: var(--color-text-muted);
  }

  .skills-section {
    padding: 2rem 0 4rem;
  }

  .section-header {
    margin-bottom: 2.5rem;
  }

  .section-header h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .section-header p {
    color: var(--color-text-muted);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }

  .skill-card {
    display: block;
    color: inherit;
    text-decoration: none;
    animation: fadeIn 0.4s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  .skill-card-inner {
    background: var(--color-surface-elevated);
    padding: 1.75rem;
    border-radius: 16px;
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
    height: 100%;
    position: relative;
  }

  .skill-card:hover .skill-card-inner {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-lg), 0 0 0 1px var(--color-accent-soft);
    transform: translateY(-2px);
  }

  .skill-badge {
    position: absolute;
    top: 1.75rem;
    right: 1.75rem;
    width: 28px;
    height: 28px;
    background: var(--color-accent-softer);
    color: var(--color-accent);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .skill-card h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .skill-tagline {
    font-size: 0.9rem;
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .skill-summary {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .skill-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    transition: color 0.15s ease;
  }

  .skill-card:hover .skill-link {
    color: var(--color-accent);
  }

  .skill-link svg {
    transition: transform 0.15s ease;
  }

  .skill-card:hover .skill-link svg {
    transform: translateX(3px);
  }

  .install-section {
    padding: 2rem 0 4rem;
  }

  .install-card {
    background: var(--color-surface);
    border-radius: 20px;
    padding: 2.5rem;
    display: flex;
    gap: 3rem;
    align-items: flex-start;
    border: 1px solid var(--color-border);
  }

  @media (max-width: 768px) {
    .install-card {
      flex-direction: column;
      gap: 2rem;
    }
  }

  .install-content {
    flex: 1;
  }

  .install-content h2 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .install-content p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .install-commands {
    flex: 1.5;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .command-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: var(--color-surface-elevated);
    padding: 0.875rem 1.25rem;
    border-radius: 12px;
    border: 1px solid var(--color-border);
  }

  .command-label {
    font-size: 0.8rem;
    color: var(--color-text-light);
    white-space: nowrap;
    min-width: 100px;
  }

  .command-row code {
    font-size: 0.875rem;
    background: none;
    border: none;
    padding: 0;
    color: var(--color-text);
  }

  .footer {
    padding: 3rem 0;
    text-align: center;
    border-top: 1px solid var(--color-border);
  }

  .footer p {
    font-size: 0.875rem;
    color: var(--color-text-light);
  }
</style>
