---
import Base from "../layouts/Base.astro";
import InstallBanner from "../components/InstallBanner.astro";
import SkillCard from "../components/SkillCard.astro";
import { readdirSync, readFileSync, existsSync } from "fs";
import { join } from "path";

interface SkillData {
  sourceHash: string;
  generatedAt: string;
  skill: {
    name: string;
    displayName: string;
    tagline: string;
    shortSummary: string;
    fullSummary: string;
    highlights: Array<{ title: string; description: string }>;
    workflow: {
      steps: Array<{ name: string; description: string; details?: string }>;
    };
  };
}

const generatedDir = join(process.cwd(), "src/content/generated");
let skills: SkillData[] = [];

if (existsSync(generatedDir)) {
  const files = readdirSync(generatedDir).filter((f) => f.endsWith(".json"));
  skills = files.map((f) => {
    const content = readFileSync(join(generatedDir, f), "utf-8");
    return JSON.parse(content) as SkillData;
  });
}

// Sort skills by name for consistent ordering
skills.sort((a, b) => a.skill.name.localeCompare(b.skill.name));
---

<Base title="Skills">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <p class="hero-eyebrow">Claude Code Skills</p>
      <h1>Build better with<br /><span class="hero-accent">structured workflows</span></h1>
      <p class="hero-description">
        A curated collection of skills for AI-assisted development.
        Plan thoughtfully, execute precisely, and iterate with confidence.
      </p>
    </div>
  </section>

  <div class="container">
    <!-- Installation Banner -->
    <section class="install-section">
      <InstallBanner />
    </section>

    <!-- Skills Grid -->
    {
      skills.length === 0 ? (
        <section class="empty-state">
          <p>
            No skills generated yet. Run <code>npm run generate</code> to create skill content.
          </p>
        </section>
      ) : (
        <section class="skills-section">
          <header class="section-header">
            <h2>Available Skills</h2>
            <p>Explore each skill to learn how it can enhance your development workflow</p>
          </header>

          <div class="skills-grid">
            {skills.map((s, index) => (
              <SkillCard
                name={s.skill.name}
                displayName={s.skill.displayName}
                tagline={s.skill.tagline}
                shortSummary={s.skill.shortSummary}
                index={index}
              />
            ))}
          </div>
        </section>
      )
    }
  </div>
</Base>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-16) 0 var(--space-12);
    text-align: center;
    background: linear-gradient(
      180deg,
      var(--color-bg) 0%,
      var(--color-bg-alt) 100%
    );
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .hero-eyebrow {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-4);
  }

  .hero h1 {
    font-family: var(--font-display);
    font-size: var(--text-5xl);
    font-weight: 600;
    line-height: var(--leading-tight);
    letter-spacing: var(--tracking-tight);
    color: var(--color-text);
    margin-bottom: var(--space-6);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-accent {
    color: var(--color-accent);
    font-style: italic;
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: var(--leading-relaxed);
    max-width: 520px;
    margin: 0 auto;
  }

  /* Install Section */
  .install-section {
    margin-top: calc(-1 * var(--space-8));
    margin-bottom: var(--space-12);
    position: relative;
    z-index: 10;
  }

  /* Empty State */
  .empty-state {
    background: var(--color-surface);
    padding: var(--space-12);
    border-radius: var(--radius-xl);
    text-align: center;
    border: 1px solid var(--color-border);
    margin-bottom: var(--space-12);
  }

  .empty-state p {
    color: var(--color-text-muted);
    font-size: var(--text-base);
  }

  /* Skills Section */
  .skills-section {
    padding: var(--space-8) 0 var(--space-16);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-10);
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .section-header p {
    font-size: var(--text-base);
    color: var(--color-text-muted);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--space-12) 0 var(--space-10);
    }

    .hero h1 {
      font-size: var(--text-3xl);
    }

    .hero-description {
      font-size: var(--text-base);
    }

    .install-section {
      margin-top: calc(-1 * var(--space-6));
    }

    .skills-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .skills-section {
      padding: var(--space-6) 0 var(--space-12);
    }
  }
</style>
