---
import Base from "../layouts/Base.astro";
import PluginCard from "../components/PluginCard.astro";
import { siteConfig } from "../config/site";
import { readdirSync, readFileSync, existsSync } from "fs";
import { join } from "path";

interface PluginData {
  sourceHash: string;
  generatedAt: string;
  plugin: {
    name: string;
    displayName: string;
    tagline: string;
    shortDescription: string;
    fullDescription: string;
    useCases: Array<{ title: string; description: string }>;
    skillCount: number;
    skills: string[];
    marketplaceCommand: string;
    installCommand: string;
  };
}

const pluginsDir = join(process.cwd(), "src/content/generated/plugins");
let plugins: PluginData[] = [];

if (existsSync(pluginsDir)) {
  const files = readdirSync(pluginsDir).filter((f) => f.endsWith(".json"));
  plugins = files.map((f) => {
    const content = readFileSync(join(pluginsDir, f), "utf-8");
    return JSON.parse(content) as PluginData;
  });
}

// Sort plugins by name for consistent ordering
plugins.sort((a, b) => a.plugin.displayName.localeCompare(b.plugin.displayName));
---

<Base title={siteConfig.site.name} showHeader={false}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero-slogan">{siteConfig.hero.slogan}</h1>
      <p class="hero-subtitle">{siteConfig.hero.subtitle}</p>
    </div>
  </section>

  <div class="container">
    <!-- Plugins List -->
    {
      plugins.length === 0 ? (
        <section class="empty-state">
          <p>
            No plugins found. Run <code>npm run generate</code> to create plugin content.
          </p>
        </section>
      ) : (
        <section class="plugins-section">
          <div class="plugins-list">
            {plugins.map((p, index) => (
              <PluginCard
                name={p.plugin.name}
                displayName={p.plugin.displayName}
                tagline={p.plugin.tagline}
                shortDescription={p.plugin.shortDescription}
                skillCount={p.plugin.skillCount}
                marketplaceCommand={p.plugin.marketplaceCommand}
                installCommand={p.plugin.installCommand}
                index={index}
              />
            ))}
          </div>
        </section>
      )
    }
  </div>
</Base>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-20) 0 var(--space-16);
    text-align: center;
    background: linear-gradient(
      180deg,
      var(--color-bg) 0%,
      var(--color-bg-alt) 100%
    );
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .hero-slogan {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 600;
    line-height: 1.05;
    letter-spacing: -0.03em;
    color: var(--color-text);
    margin-bottom: var(--space-6);
    font-style: italic;
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: var(--leading-relaxed);
    max-width: 480px;
    margin: 0 auto;
    font-weight: 400;
  }

  /* Empty State */
  .empty-state {
    background: var(--color-surface);
    padding: var(--space-12);
    border-radius: var(--radius-xl);
    text-align: center;
    border: 1px solid var(--color-border);
    margin: var(--space-12) 0;
  }

  .empty-state p {
    color: var(--color-text-muted);
    font-size: var(--text-base);
  }

  /* Plugins Section */
  .plugins-section {
    padding: var(--space-12) 0 var(--space-16);
  }

  .plugins-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    max-width: 900px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--space-14) 0 var(--space-12);
    }

    .hero-slogan {
      font-size: var(--text-4xl);
    }

    .hero-subtitle {
      font-size: var(--text-lg);
    }

    .plugins-section {
      padding: var(--space-8) 0 var(--space-12);
    }
  }

  @media (max-width: 480px) {
    .hero-slogan {
      font-size: var(--text-3xl);
    }

    .hero-subtitle {
      font-size: var(--text-base);
    }
  }
</style>
